    "import numpy\n",
    "import cv2\n",
    "\n",
    "img = cv2.imread('grayimage.jpg')\n",
    "\n",
    "gray = cv2.cvtColor(img, cv2.COLOR_BGR2GRAY)\n",
    "cv2.imshow('image', gray)\n",
    "\n",
    "cv2.waitKey(0)\n",
    "cv2.destroyAllWindows()\n",
    "\n",
    "cv2.imwrite('grayimage.jpg', gray)\n",
    "\n"
   ]
